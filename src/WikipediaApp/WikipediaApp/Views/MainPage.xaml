<Page
    x:Class="WikipediaApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WikipediaApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:contract5Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <x:Double x:Key="WatermarkImageOpacity">0.1</x:Double>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <x:Double x:Key="WatermarkImageOpacity">0.17</x:Double>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <DataTemplate x:Key="DefaultListViewItemTemplate" x:DataType="local:ArticleHead">
                <StackPanel Orientation="Vertical" Padding="0,5">
                    <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind Description}" FontWeight="Light" FontSize="14" TextWrapping="WrapWholeWords" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="NarrowListViewItemTemplate" x:DataType="local:ArticleHead">
                <TextBlock Text="{x:Bind Title}" FontWeight="SemiLight" />
            </DataTemplate>

            <DataTemplate x:Key="HistoryTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Uid="MainHistoryPaneHeaderTextBlock" Grid.Row="0" Style="{StaticResource SplitViewPaneHeaderTextBlockStyle}" />

                    <ListView Grid.Row="1" ItemsSource="{Binding History}" Style="{StaticResource SplitViewPaneListViewStyle}"
                              local:ListViewExtensions.Command="{Binding ShowArticleCommand}" ItemClick="HistoryListViewItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ArticleHead">
                                <Grid ToolTipService.ToolTip="{x:Bind Title}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{x:Bind Title}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind Language}" Typography.Capitals="AllSmallCaps" FontWeight="Light" Margin="5,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="FavoritesTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Uid="MainFavoritesPaneHeaderTextBlock" Grid.Row="0" Style="{StaticResource SplitViewPaneHeaderTextBlockStyle}" />

                    <ListView Grid.Row="1" ItemsSource="{Binding Favorites}" Style="{StaticResource SplitViewPaneListViewStyle}"
                              local:ListViewExtensions.Command="{Binding ShowArticleCommand}" ItemClick="FavoritesListViewItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ArticleHead">
                                <Grid ToolTipService.ToolTip="{x:Bind Title}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{x:Bind Title}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind Language}" Typography.Capitals="AllSmallCaps" FontWeight="Light" Margin="5,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="LanguagesTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Uid="MainLanguagesPaneHeaderTextBlock" Grid.Row="0" Style="{StaticResource SplitViewPaneHeaderTextBlockStyle}" />

                    <ListView Grid.Row="1" ItemsSource="{Binding Languages}" Style="{StaticResource SplitViewPaneListViewStyle}"
                              local:ListViewExtensions.Command="{Binding ChangeLanguageCommand}" ItemClick="LanguagesListViewItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="ListView.ItemTemplate" Value="{StaticResource DefaultListViewItemTemplate}" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="ListView.ItemTemplate" Value="{StaticResource NarrowListViewItemTemplate}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <SplitView x:Name="SplitView" Grid.Row="0" contract5Present:Background="{ThemeResource SystemControlAcrylicElementBrush}">
            <SplitView.Pane>
                <ContentPresenter x:Name="PaneContentPresenter" />
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button Background="Transparent" Click="LanguagesButtonClick">
                            <Button.Content>
                                <TextBlock Text="{Binding Language.Code}" Typography.Capitals="AllSmallCaps" FontSize="15" FontWeight="Bold" />
                            </Button.Content>
                        </Button>
                        
                        <TextBox Grid.Column="1" Margin="5,0" Text="{Binding SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 local:TextBoxExtensions.EnterCommand="{Binding SearchCommand}" />
                        
                        <Button Grid.Column="2" Command="{Binding SearchCommand}">
                            <Button.Content>
                                <SymbolIcon Symbol="Find" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Image Grid.Row="1" Source="/Assets/Logo.png" Width="120" Height="120" Opacity="{ThemeResource WatermarkImageOpacity}"
                           Visibility="{Binding SearchResults, Converter={StaticResource CollectionToVisibilityConverter}, ConverterParameter=True}" />

                    <TextBlock x:Uid="MainNoSearchResultsTextBlock" Grid.Row="1" Margin="0,30" FontWeight="SemiLight" Foreground="Gray"
                               HorizontalAlignment="Center" VerticalAlignment="Top"
                               Visibility="{Binding NoSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <ListView Name="ListView" Grid.Row="1" ItemsSource="{Binding SearchResults}" SelectionMode="None"
                              Visibility="{Binding SearchResults, Converter={StaticResource CollectionToVisibilityConverter}}"
                              local:ListViewExtensions.Command="{Binding ShowArticleCommand}">

                    </ListView>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <ProgressBar Grid.Row="0" IsIndeterminate="True" VerticalAlignment="Bottom"
                                  Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <CommandBar Grid.Row="1" contract5Present:Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Uid="MainSettingsAppBarButton" Icon="Setting" Command="{Binding ShowSettingsCommand}" />
            </CommandBar.SecondaryCommands>

            <AppBarButton x:Uid="MainHomepageAppBarButton" Icon="Home" Command="{Binding ShowHomePageCommand}" />
            <AppBarButton x:Uid="MainRandomAppBarButton" Icon="Shuffle" Command="{Binding ShowRandomArticleCommand}" />

            <AppBarSeparator />

            <AppBarButton x:Uid="MainHistoryAppBarButton" Click="HistoryButtonClick">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE81C;" />
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarButton x:Uid="MainFavoritesAppBarButton" Click="FavoritesButtonClick">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE728;" />
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarButton x:Uid="MainLanguagesAppBarButton" Icon="World" Click="LanguagesButtonClick" />
        </CommandBar>
    </Grid>
</Page>

